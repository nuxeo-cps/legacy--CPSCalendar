<tal:block define="global current_action string:view" />
<tal:block define="calendars here/calendars_get">
<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master">
<metal:block fill-slot="base">
  <base href="." tal:attributes="href string:${here/absolute_url}/" />
</metal:block>

<metal:block fill-slot="main" i18n:domain="cpscalendar">
  <tal:block repeat="type python:({'id':'private', 'title':'cpscalendar_private'},
                                  {'id':'others', 'title':'cpscalendar_others'},
                                  {'id':'events_shows', 'title':'cpscalendar_events_shows'},
                                  {'id':'rooms', 'title':'cpscalendar_rooms'},
                                  {'id':'ressources', 'title':'cpscalendar_ressources'},)">
    <tal:block define="id type/id;
                       cals calendars/?id"
               condition="cals">
      <span class="calTitle"
            tal:content="python:type['title']"
            i18n:translate="">Rooms</span>
      <ul>
        <li tal:repeat="cal cals">
          <a tal:attributes="href cal/url"
             tal:content="cal/title">Calendar</a>
          <strong tal:condition="cal/pending">
            <a tal:attributes="href string:${cal/url}/calendar_pending_events"
               tal:content="string:[${cal/pending}]"
               i18n:translate="">
              [1]
            </a>
          </strong>
        </li>
      </ul>
    </tal:block>
  </tal:block>
  <tal:block condition="python:mtool.checkPermission('Add portal content', here)">
    <a href="calendar_create_form"
	  i18n:translate="cpscalendar_create_a_calendar">
      Create a calendar
    </a>
  </tal:block>
</metal:block>

</html>
</tal:block>
