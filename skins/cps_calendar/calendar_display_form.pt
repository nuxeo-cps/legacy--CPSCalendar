<tal:block define="global current_action string:display" />
<html metal:use-macro="here/main_template/macros/master"
      i18n:domain="cpscalendar">

<metal:block fill-slot="main"
             tal:define="cals here/getVisibleCalendars|nothing;
                         additionals here/getAdditionalCalendars;">
  <p i18n:translate="cpscalendar_message_select_calendars_to_display_with_this_calendar">
    Select the calendars you want to display with this calendar
  </p>:
  <form action="calendar_display"
        tal:condition="cals">
    <ul tal:define="calendars python:[cal for cal in cals if cal.id != here.id]">
      <li tal:repeat="cal calendars">
        <input type="checkbox" name="cal_ids:list"
               tal:attributes="value cal/id;
                               checked python:cal.id in additionals" />
        <tal:block replace="cal/title_or_id" />
      </li>
    </ul>
    <input type="submit"
           value="button_validate"
           i18n:attributes="value"/>
  </form>
  <tal:block condition="not:cals">
    <span i18n:translate="cpscalendar_message_no_shared_calendars_found">
      No shared calendar found
    </span>
  </tal:block>
</metal:block>

</html>
