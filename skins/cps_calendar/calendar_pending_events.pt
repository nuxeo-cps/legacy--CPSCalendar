<tal:block define="event_id request/form/event_id|nothing;
                   pendings python:here.getPendingEvents(event_id)"
           i18n:domain="cpscalendar">
<html metal:use-macro="here/main_template/macros/master">

<metal:block fill-slot="head_slot">
  <span i18n:translate="_cal_Pending_events_for_">
    Pending events for
  </span>
  «&nbsp;<span tal:replace="here/title_or_id">Title</span>&nbsp;»
</metal:block>

<metal:block fill-slot="main">
  <tal:block condition="not:pendings">
    <h3 tal:condition="event_id"
        i18n:translate="There is no pending request for this event.">
          There is no pending request for this event.</h3>
    <h3 tal:condition="not:event_id"
        i18n:translate="There is no pending request.">
          There is no pending request.</h3>
  </tal:block>
  <tal:block condition="pendings">
    <metal:block use-macro="here/calendar_macros/macros/pendings_view" />
  </tal:block>
</metal:block>

</html>
</tal:block>
