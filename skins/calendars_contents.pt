<tal:block define="global current_action string:view" />
<tal:block define="calendars here/calendars_get">
<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="cpscalendar">
<metal:block fill-slot="base">
  <base href="." tal:attributes="href string:${here/absolute_url}/" />
</metal:block>
<body>

<metal:block fill-slot="main">
        <tal:block replace="calendars"/>
  <tal:block repeat="type python:({'id':'private', 'title':'_cal_Private_'},
                                  {'id':'others', 'title':'_cal_Others_'},
                                  {'id':'events_shows', 'title':'_cal_Events_shows_'},
                                  {'id':'rooms', 'title':'_cal_Rooms_'},
                                  {'id':'ressources', 'title':'_cal_Ressources_'},)">
    <tal:block define="id type/id; cals calendars/?id"
               condition="cals">
      <span class="calTitle" tal:content="python:type['title']"
          i18n:translate="">Rooms</span>
      <ul>
        <li tal:repeat="cal cals">
          <a tal:attributes="href cal/url" tal:content="cal/title">Calendar</a>
          <strong tal:condition="cal/pending">
            <a tal:attributes="href string:${cal/url}/calendar_pending_events"
               tal:content="string:[${cal/pending}]"
               i18n:translate="">
              [1]
            </a>
          </strong>
        </li>
      </ul>
    </tal:block>
  </tal:block>
  <tal:block condition="python:mtool.checkPermission('Add portal content', here)">
    <a href="calendar_create_form"
       i18n:translate="_Create_a_calendar_">
      Create a calendar
    </a>
  </tal:block>
</metal:block>

</body>
</html>
</tal:block>
