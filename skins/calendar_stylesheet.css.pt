<tal:block define="global portal_url python:here.portal_url(relative=1)" />
<tal:block repeat="att python:['', 'att_', 'dirty_']">
  <tal:block repeat="status python:['confirmed', 'unconfirmed', 'cancelled']">
td.week_<tal:block replace="att" /><tal:block replace="status" /> {
  background-image: url(<tal:block replace="portal_url" />/cal_week_<tal:block replace="att" /><tal:block replace="status" />.png);
  background-repeat: no-repeat;
}
  </tal:block>
</tal:block>

small.cal_event {
  color: white
}

a.cal_event {
  color: white
}

a.cal_event:link {
  color: white
}

a.cal_event:visited {
  color: white
}

a.cal_event:active {
  color: #DDDDDD
}

a.cal_event:hover {
  color: white
}

th.day_event {
  background-color: black;
  text-align: left;
}

img.day_icon {
  vertical-align:middle
}

td.cal_left_tab {
  vertical-align:middle;
  color: white;
  text-align: center;
  background-image: url(<tal:block replace="portal_url" />/cal_left_tab.png);
}

td.cal_center_tab {
  vertical-align:middle;
  color: white;
  text-align: center;
  background-image: url(<tal:block replace="portal_url" />/cal_center_tab.png);
}

td.cal_right_tab {
  vertical-align:middle;
  color: white;
  text-align: center;
  background-image: url(<tal:block replace="portal_url" />/cal_right_tab.png);
}
